<?xml version="1.0"?>
<!DOCTYPE greeter SYSTEM "greeter.dtd">

<greeter id="theme">

    <item type="svg" id="background" background="true">
        <normal file="/usr/share/mdk/backgrounds/rosa-background.jpg"/>
	<pos width="100%" height="100%"/>
    </item>

    <item type="rect" id="userslider-rect">
	<pos y="50%" x="50%" width="100%" height="400" anchor="c"/>
	<fixed>
	    <item type="list" id="userslider">
		<pos height="100%" width="100%"/>
	    </item>
	</fixed>
    </item>

    <item type="rect">
	<pos x="50%" y="20%" width="box" height="box" anchor="n"/>
	<box orientation="horizontal" spacing="0">

	    <item type="entry" id="user-entry">
		<pos height="24" width="0"/>
	    </item>

	    <item type="entry" id="pw-entry">
		<pos height="24" width="0"/>
	    </item>

	</box>
    </item>

    <item type="label" id="pam-error">
	<pos x="50%" y="80%" anchor="c"/>
	<normal font="Sans Bold 14" color="#ffffff"/>
	<text/>
    </item>

    <item type="rect" id="reboot_button" button="true">
        <show type="reboot" modes="console"/>
        <pos x="-40" y="-8" width="32" height="32" anchor="se"/>
        <fixed>
    	    <item type="pixmap">
		<normal file="system-reboot.png" tint="#dddddd"/>
		<prelight file="system-reboot.png"/>
		<active file="system-reboot.png" tint="#b8bcdb"/>
	    </item>
	</fixed>
    </item>

    <item type="rect" id="halt_button" button="true">
        <show type="halt" modes="console"/>
        <pos x="-8" y="-8" width="32" height="32" anchor="se"/>
        <fixed>
    	    <item type="pixmap">
		<normal file="system-shutdown.png" tint="#dddddd"/>
		<prelight file="system-shutdown.png"/>
		<active file="system-shutdown.png" tint="#b8bcdb"/>
	    </item>
	</fixed>
    </item>

</greeter>